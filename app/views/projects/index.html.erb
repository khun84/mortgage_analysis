<div class="row m-0">
    <div class="col-md-6">
        <h1>
            Your Projects
        </h1>

    </div>
</div>

<%= form_for :project, url: projects_path, method: :post do |f| %>
    <div class="form-row">
        <div class="form-group col-md-6">

            <%= f.label :title, class: 'col-form-group' %>
            <br>
            <%= f.text_field :title, class: 'form-control', size: "20", maxlength: @input.project_name.max %>
            <br>
            <%= f.label :description, class: 'col-form-group' %>
            <br>
            <%= f.text_area :description, class: 'form-control', size: "100", maxlength: @input.project_description.max %>
            <br>
            <%= f.submit 'New project', class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>
<br>


<%= render partial: 'project', collection: @projects%>

