<h1>
    Your Projects
</h1>

<%= form_for :project, url: projects_path, method: :post do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title, size: "20", maxlength: @input.project_name.max %>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, size: "100", maxlength: @input.project_description.max %>
    <br>
    <%= f.submit 'New project' %>
<% end %>
<br>


<%= render partial: 'project', collection: @projects%>

