<!DOCTYPE html>
<html>
<head>
    <title>MortgageAnalysis</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
</head>

<body>
    <%= link_to 'Home', root_path %>
    <% if signed_in? %>

        <%= link_to 'Projects', projects_path %>
        <%= link_to 'Search', new_search_path %>
        <%= link_to 'Forex', forex_path %>
        <%= form_for :sign_out, url: sign_out_path, method: :delete do |f| %>
            <%= f.submit 'Sign out' %>
        <% end %>

        <p>
            Sign in as <%= current_user.name %>
        </p>
    <% else %>
        <%= form_for :sign_up, url: '/auth/facebook' do |f| %>
            <% f.submit 'Sign in with Facebook' %>
        <% end %>
    <% end %>

    <div id="msg-container">

        <p id="notice-msg"><%= flash[:notice] %></p>

        <p id="error-msg"><%= flash[:error] %></p>
    </div>

    <%= button_tag 'Dismiss message', id: 'msg-button' %>

    <p id="spinner">Loading....Please be patient....</p>



    <%= yield %>
</body>
</html>
