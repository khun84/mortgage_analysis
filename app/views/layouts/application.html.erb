<!DOCTYPE html>
<html>
<head>
    <title>MortgageAnalysis</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>
</head>

<body>
    <% if signed_in? %>

        <%= link_to 'Projects', projects_path %>
        <%= form_for :sign_out, url: sign_out_path, method: :delete do |f| %>
            <%= f.submit 'Sign out' %>
        <% end %>

        <p>
            Sign in as <%= current_user.name %>
        </p>
    <% else %>
        <%= form_for :sign_up, url: '/auth/facebook' do |f| %>
            <% f.submit 'Sign up' %>
        <% end %>
    <% end %>

    <p id="notice-msg">
        <%= flash[:notice] %>
    </p>

    <p id="error-msg">
        <%= flash[:error] %>
    </p>



    <%= yield %>
</body>
</html>
