<%= form_for :scenario, url: new_scenario_path do |f| %>
    <%= f.label :deposit, 'Deposit in %' %>
    <br>
    <%= f.number_field :deposit, value: default_deposit, min: 0 %>
    <br>
    <%= f.label :buying_price, "Total buying price (unit in '000)" %>
    <br>
    <%= f.number_field :buying_price, value: default_buying_price, min: 5 %>
    <br>
    <%= f.label :tenure, 'Tenure (yrs)' %>
    <%= f.range_field :tenure, type: 'range', id:'tenureInput', min: 1, max: 50,
                      value: default_tenure, step: 1, oninput: "tenureOutput.value = tenureInput.value" %>
    <br>
    <output id="tenureOutput">30</output>
    <br>
    <%= f.label :selling_price, "Selling price (unit in '000)" %>
    <br>
    <%= f.number_field :selling_price, value: default_selling_price, min: 0 %>
    <br>
    <%= f.label :holding_period, "Holding period (yr)" %>
    <br>
    <%= f.range_field :holding_period, type: 'range', id:'holdingPeriodInput', min: 1, max: 50,
                    value: default_tenure, step: 1, oninput: "holdingPeriodOutput.value = holdingPeriodInput.value" %>
    <br>
    <output id="holdingPeriodOutput"><%= default_tenure %></output>
    <br>
    <%= f.submit "Submit" %>

<% end %>